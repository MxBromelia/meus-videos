<% if notice %>
<div class='notice' %>
  <p><%= notice %></p>
</div>
<% end %>
<h1>
    <%=@category.name.capitalize %>
    <i class="bi bi-star<%=@category.bookmarked ? "-fill" : ""%>"
       data-behavior=bookmark
       data-id=<%=@category.id%>
    ></i>
</h1>
<ul>
<% if @category.videos.any? %>
    <% @category.videos.each do |video| %>
        <li><%= link_to video.title, video_path(video.id) %>
    <% end %>
<% else %>
    Não há videos nesta Categoria
<% end %>
</ul>
<%= link_to "Adicionar Vídeo", new_category_video_path(@category.id), class: 'btn btn-primary', data: {behavior: 'add-video'} %>
<%= link_to "Editar", edit_category_path(@category), class: 'btn btn-info' %>
 <%= button_tag "Voltar", type: 'button', class: 'btn btn-secondary', data: {behavior: :back} %>