<% if notice %>
<div class='notice' %>
  <p><%= notice %></p>
</div>
<% end %>
<table class="table">
  <thead>
    <tr>
      <th><%= @categories.model.human_attribute_name :name %></th>
      <th colspan=2><%= @categories.model.human_attribute_name :description %></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
    <tr>
      <td><%= link_to category.name, category_path(category) %></td>
      <td><%=category.description%></td>
      <td>
        <%= link_to edit_category_path(category), class: 'btn remove-category' do %>
          <i class="bi bi-pencil-square" title='Edirar Categoria'></i>
        <% end %>
        <%= link_to category, method: :delete, class: 'btn edit-category', data: { confirm: "VocÃª tem certeza?" } do %>
          <i class="bi bi-trash" title='Remover Categoria'></i>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "Adicionar Categoria", new_category_path %>